package com.edu;

public class MaximumValues {

	public static void main(String[] args) {

		//valores maximos de tipos primitivos
		System.out.println( "short: " + Short.MAX_VALUE );
		System.out.println( "char: " + Character.MAX_VALUE );
		System.out.println( "int: " + Integer.MAX_VALUE );
		System.out.println( "long: " + Long.MAX_VALUE );
		System.out.println( "float: " + Float.MAX_VALUE );
		System.out.println( "double: " + Double.MAX_VALUE );
		
		int i = 2147483647;
		long l = (long)i;
		float f = (float)l;
		double d = f;
		
		System.out.println(d);
		
		int i2 = 2147483647;
		long l2 = Integer.valueOf(i2).longValue();
		float f2 = Long.valueOf(l2).floatValue();
		double d2 = Float.valueOf(f2).doubleValue();
		
		System.out.println(d2);
		
	}

}
